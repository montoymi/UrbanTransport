@model UrbanTransport.Models.ControlRecord

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Ejecución de ruta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CheckPointId" class="control-label"></label>
                <select asp-for="CheckPointId" class="form-control" asp-items="ViewBag.CheckPointId"></select>
                <span asp-validation-for="CheckPointId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusId" class="control-label"></label>
                <select asp-for="BusId" class="form-control" asp-items="ViewBag.BusId"></select>
                <span asp-validation-for="BusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecorDate" class="control-label"></label>
                <input asp-for="RecorDate" class="form-control" />
                <span asp-validation-for="RecorDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
